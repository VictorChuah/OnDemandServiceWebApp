@using fyptest.Models
@model ServiceCRUD

<div class="row">
  @foreach (var p in Model.Types)
  {
<div class="col-sm-6 col-md-4 col-lg-3 mb-3" data-aos="fade-up" data-aos-delay="100">
  <div class="h-100 feature-item" style="cursor:pointer" onclick="selectType('@p.STId')">
    <span><img src="~/Image/Background/@(p.name).png" class="text-primary" style="padding-top:20px; padding-bottom:30px" /></span> @*#41A758*@
    <h2> @p.name </h2>
    <span class="counting">@p.Service_Category.Count</span>
  </div>
</div>}

  <div class="col-sm-6 col-md-4 col-lg-3 mb-3" data-aos="fade-up" data-aos-delay="100">
    <div class="h-100 feature-item" style="cursor:pointer" onclick="add()">
      <span><img src="~/Image/Background/add.png" class="text-primary" style="padding-top:20px; padding-bottom:30px" /></span>
      <h2> Add new service </h2>
      <span class="counting">0</span>
    </div>
  </div>
</div>

