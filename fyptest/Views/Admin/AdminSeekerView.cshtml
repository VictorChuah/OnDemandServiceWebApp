@using fyptest.Models
@model IEnumerable<Seeker>

@{ ViewBag.Title = "AdminSeekerView";
  Layout = "~/Views/Shared/_Layout.cshtml"; }

<div style="height: 113px;"></div>

<div class="unit-5 overlay" style="background-image: url('../../Image/Background/hero_1.jpg');">
  <div class="container text-center">
    <h2 class="mb-0">Seeker List</h2>
    <p class="mb-0 unit-6"><a href="index.html">Home</a> <span class="sep">></span> <span>Categories</span></p>
  </div>
</div>

<div class="site-section">
  <div class="container">
    <div class="row">
      <div class="col-md-6 mx-auto text-center mb-5 section-heading">
        <h2 class="mb-5">Active Seeker</h2>
      </div>
    </div>
    <div class="row">
      @foreach (var p in Model)
      {
                if (p.status == 1)
                {
      <div class="col-sm-6 col-md-4 col-lg-3 mb-3" data-aos="fade-up" data-aos-delay="100">
        <a href="~/Admin/SeekerApprovalDetail?id=@System.Web.HttpUtility.UrlEncode(p.email)" class="h-100 feature-item">
          <span><img src="@p.profileImage" /></span>
          <h2> @p.name </h2>
          <span class="counting">@p.status</span>
        </a>
      </div>
                }
        
      }
    </div>
    <div class="row">
      <div class="col-md-6 mx-auto text-center mb-5 section-heading">
        <h2 class="mb-5">Blocked Seeker</h2>
      </div>
    </div>
    <div class="row">
      @foreach (var p in Model)
      {
                if (p.status == 0)
                {
      <div class="col-sm-6 col-md-4 col-lg-3 mb-3" data-aos="fade-up" data-aos-delay="100">
        <a href="~/Admin/SeekerApprovalDetail?id=@System.Web.HttpUtility.UrlEncode(p.email)" class="h-100 feature-item">
          <span><img src="@p.profileImage" /></span>
          <h2> @p.name </h2>
          
        </a>
      </div>
                }
        
      }
    </div>
  </div>
</div>


